@import "./home/normalize"

negro = #151412
blanco = #D9D8D8
rojo = #D90007
naranja = #DB3200
verde = #13E03C
verde-oscuro = #12a22f
gris = #999999
gris-otro = #C5C3C3
gris-oscuro = #5E5D5C
gris-mas-oscuro = #2C2B2A

.red
  color rojo
.big
  font-weight bold

body
  font-family 'Source Sans Pro', Arial
  min-width 800px

header
  background negro
  margin 0
  padding 0
  height 50px
  color blanco
  position relative

  .logo
    cursor pointer
    display inline-block
    border-radius 50%
    width 24px
    height 24px
    margin 12px 0 0 12px
    background linear-gradient(to bottom, rgba(255,255,255,0.7) 0%, rgba(255,255,255,0.5) 100%)
    font-weight bold
    text-align center
    float left
    &::before
    &::after
      background-position -3px -3px
      background-repeat no-repeat
      content ''
      display block
      position absolute
      width 24px
      height 24px
      background-image url(https://na.static.mega.co.nz/3/images/mega/top-sprite_v4.svg)
    &::after
      opacity 0
      background-position -3px -33px
    &::before
      background-position -3px -3px
    &:hover
      background rojo
      &::after
        opacity 1
  // Options of nav
  .options
    position absolute
    right 0
    div
      display inline-block
    .photo
      width 24px
      height 24px
      border-radius 100%
      overflow hidden
      margin 11px
      display inline-block
      border 2px solid transparent
      float left
      img
        width 100%
      &:hover
        border 2px solid blanco
    .username
      font-size 13px
      font-weight lighter
      margin 1.3em 1em 1.3em 0
      color blanco
    .plan
      background verde-oscuro
      padding .1em .5em
      border-radius 10px
      font-size 13px
      margin 1.3em .5em
      &:hover
        background verde
    p
      display inline-block
    .conect
      border 2px solid transparent
      margin 17px 0
      width .5em
      height .5em
      border-radius 50%
      float left
      overflow hidden
      padding 1px
      .point
        background #13e03c
        width 100%
        height 100%
        margin 0 0 8px 0
        border-radius 100%
      &:hover
        border 2px solid gris-oscuro
    .notifications
      width 24px
      height 24px
      background-image url("https://na.static.mega.co.nz/3/images/mega/top-sprite_v4.svg")
      background-repeat no-repeat
      background-color rgba(255,255,255,0.3)
      background-position -9px -205px
      border-radius 100%
      margin 13px
      float left
      &:hover
        background-color gris

    .btn-menu
      margin 1em
      padding .4em 10px .4em 27px
      height 24px
      border-radius 8px
      color blanco
      text-decoration none
      font-weight lighter
      font-size 13px
      background url("https://na.static.mega.co.nz/3/images/mega/top-sprite_v4.svg")
      background-position -4px -60px
      background-color rgba(255,255,255,0.3)
      background-repeat no-repeat
      &:hover
        background-color gris

  .content-search
    float right
    margin 13px 22em 13px 0
    border-radius 10px
    padding 0 2em
    width 100px
    background rgba(255, 255, 255, 0.31)
    height 24px
    background-image url("https://na.static.mega.co.nz/3/images/mega/top-sprite_v4.svg")
    background-repeat no-repeat
    background-position -3px -473px
    transition width 1s

    .search
      width 100%
      border none
      color white
      font-size 14px
      background transparent
      outline none
      height calc(100% - 2px)

  // Navigate menu
  .menu
    position absolute
    z-index 1
    right 0
    top 50px
    background #333
    border-radius 0 0 0 10px
    width 200px
    padding .2em 0
    display none
    .items
      list-style none
      padding 0
      margin 0
      .item
        padding .5em
        color #ccc
        padding 0 26px
        position relative
        font-size 14px
        cursor pointer
        height 32px
        line-height 32px
      .btn-submenu
        background url("https://na.static.mega.co.nz/3/images/mega/top-sprite_v4.svg")
        background-position left -348px
        background-repeat no-repeat
      .item-divider
        border-bottom 2px solid rgba(255,255,255,0.1)
    .submenu
      background #333
      position absolute
      right 0
      display none
      border-radius 10px
      padding .5em 0
      top 0


// Page body
section
  display flex
  height calc(100vh - 100px)
  min-height 600px

  .products-bottom-block
    position absolute
    bottom 0
    background gris-otro
    width 100%
    height 130px
    border-top 1px solid gris-otro

  .left
    background blanco
    min-width 300px
    position relative
  .center
    flex 100%
    position relative
    .products-bottom-block
      background white
  .right
    background blanco
    min-width 300px
    position relative
    .products-bottom-block
      .link
        background-position -525px 10px

  .left
  .center
  .right
    .products-top-text
      padding 0 20px
      text-align center
      font-size 14px
      line-height 26px
      position absolute
      top 18%
      a
        color #333333
        text-decoration none

  .left
  .right
    .animations-left-container
    .animations-right-container
      position absolute
      top 50%
      width 100%
      text-align center
      margin-top -145px

    .products-bottom-block
      .link
        background-image url("https://na.static.mega.co.nz/3/images/mega/download-buttons-sprite.png")
        background-repeat no-repeat
        background-position -463px -66px
        background-color white
        position absolute
        border-radius 8px
        border 2px solid rgba(0,0,0,0.3)
        min-width 209px
        height 60px
        top 25%
        left 30px
        max-width 234px
        text-decoration none
        .link-text
          margin-top .4em
          .text
            padding-left 70px
            font-size 17px
            line-height 24px
            color #777777
            white-space nowrap
          .small
            font-size 14px
        &:hover
          margin -3px
          border 5px solid naranja
  .right
    .products-bottom-block
      .link
        background-position 10px 10px
  .center
    .products-bottom-block
      text-align center
      .bottom-import
        background-image url("https://na.static.mega.co.nz/3/images/mega/download-sprite-v6.png")
        background-repeat no-repeat
        background-position -2px -249px
        height 60px
        display inline-block
        padding 10px 0 0 60px
        font-size 20px
        font-weight 100
        text-align left
        margin-top 1.5em
        cursor pointer
        span
          display block
          font-size 13px
          font-weight normal
        &:hover
          background-position -2px -319px
          color rojo

    .download
      width 412px
      margin -108px 0 0 -206px
      position absolute
      top 50%
      left 50%
      .info-block
        height 83px
        position relative
        .type-file
          background-image url("https://na.static.mega.co.nz/3/images/mega/files-icons_v2.svg")
          background-position center -10706px
          background-repeat no-repeat
          width 82px
          height 84px
          display inline-block
          float left
        .file-info
          float left
          margin-left 1em
          font-size 20px
          font-weight lighter
          .size-info
            font-size 12px
          .cloud-with-arrow
            background-image url("https://na.static.mega.co.nz/3/images/mega/download-sprite-v6.png")
            background-repeat no-repeat
            background-position left top
            width 28px
            height 25px
            position absolute
            bottom 0
      .buttons-block
        margin-top 1em
        .btn
          width 144px
          height 54px
          display inline-block
          border-radius 5px
          padding-top 10px
          color white
          cursor pointer
          font-size 20px
          font-weight lighter
          span
            font-size 14px
            font-weight normal
            line-height 17px
            display block
        .btn-mega
          background-color rgba( 217,0,7,0.7)
          background-image url("https://na.static.mega.co.nz/3/images/mega/download-sprite-v6.png")
          background-repeat no-repeat
          background-position 18px -124px
          padding-left 56px
          margin-right .4em
          &:hover
            background-color rojo

        .btn-download
          background-color #999
          width 168px
          height 44px
          padding 10px 16px
          &:hover
            background-color #777


footer
  background #2C2B2A
  font-size 13px
  height 50px
  width 100%
  text-align center
  color white
  line-height 50px

// Responsive

@media screen and (max-width 1100px)
  section
    .right
      display none
